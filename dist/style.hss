@import("hss/vars");
@import("hss/reset");
@import("hss/button");

var hdHeight = 20px;
#header {
	position: absolute;
	top: 0;
	height: $hdHeight;
	width: 100%;
	background: #CCC;
}

#leftSiderbar {
	position: absolute;
	top: $hdHeight;
	left: 0;
	width: 500px;
	background: #ff0;
	overflow: hidden;
}

#mainContainer {
	position: absolute;
	top: $hdHeight;
	left: 500px;
	background: #ddf;
	text-align: left;
}


@import("hss/comp");
@import("hss/misc");